#include <iostream>
using namespace std;

// Fungsi untuk membalik angka
int balikAngka(int angka) {
    int angkaTerbalik = 0;

    while (angka != 0) {
        int sisaBagi = angka % 10;
        angkaTerbalik = angkaTerbalik * 10 + sisaBagi;
        angka /= 10;
    }

    return angkaTerbalik;
}

int main() {
    int sandi;

    cout << "=== Program Pembalik Angka ===" << endl;
    cout << "Input Sandi (angka positif): ";
    cin >> sandi;

    // Validasi input
    if (sandi < 0) {
        cout << "Error: Masukkan hanya angka positif!" << endl;
        return 1; // keluar program dengan kode error
    }

    int sandiTerurai = balikAngka(sandi);

    cout << "\n=== Hasil ===" << endl;
    cout << "Sandi Asli       : " << sandi << endl;
    cout << "Sandi Terbalik   : " << sandiTerurai << endl;

    if (sandi == sandiTerurai) {
        cout << "Info: Sandi adalah palindrom (sama jika dibalik)." << endl;
    } else {
        cout << "Info: Sandi bukan palindrom." << endl;
    }

    return 0;
}
